<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/layout_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="请输入账号："
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/forget_userName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_userName"

            android:background="@drawable/shape_login_edit" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_newWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_userName"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_newWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入新密码："
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/forget_newWord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_userName"
            android:background="@drawable/shape_login_edit" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_checkWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_newWord"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_checkWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认新密码："
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/forget_checkWord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_userName"
            android:background="@drawable/shape_login_edit" />
    </LinearLayout>

    <Button
        android:id="@+id/forget_btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_checkWord"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="确定" />

    <Button
        android:id="@+id/forget_btn_quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/layout_checkWord"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:text="取消" />


</RelativeLayout>