<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/com_line1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/com_icon1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/com_a" />

                <TextView
                    android:id="@+id/com_detail1"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/com_icon1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="创造良好的物质条件和精神环境，保障残疾人以平等的权利、均等的机会，充分参与社会生活，共享社会物质文化成果。即“平等·参与·共享”。"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/com_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/com_detail1"
                    android:layout_marginTop="10dp"
                    android:text="一小时前" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/com_detail1"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/comment" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/com_line2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/com_line1"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/com_icon2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/com_b" />

                <TextView
                    android:id="@+id/com_detail2"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/com_icon2"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="残疾人是指在心理、生理、人体结构上，某种组织、功能丧失或者不正常，全部或者部分丧失以正常方式从事某种活动能力的人。"
                    android:textSize="18sp" /> 

                <TextView
                    android:id="@+id/com_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/com_detail2"
                    android:layout_marginTop="10dp"
                    android:text="一小时前" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/com_detail2"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/comment" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/com_line3"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/com_line2"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/com_icon3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/com_c" />

                <TextView
                    android:id="@+id/com_detail3"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/com_icon3"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="现代文明社会残疾人观，就是用现代文明社会的文明、进步、科学的观念，正确认识残疾人和残疾人问题，从而建立一整套关于残疾人和残疾人问题的价值观念和根本观点，其核心是“平等·参与·共享”。"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/com_time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/com_detail3"
                    android:layout_marginTop="10dp"
                    android:text="一小时前" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/com_detail3"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/comment" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>